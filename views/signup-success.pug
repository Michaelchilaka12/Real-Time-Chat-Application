extends layout

block content
  style.
    .auth-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: #f8f9fa;
    }

    .card {
      background: #fff;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      width: 420px;
      text-align: center;
    }

    .card h2 {
      margin-bottom: 1.5rem;
      color: #333;
      font-size: 22px;
    }

    a {
      display: inline-block;
      margin-top: 15px;
      padding: 10px 18px;
      background: #007bff;
      color: #fff;
      border-radius: 5px;
      text-decoration: none;
      font-size: 14px;
      transition: background 0.3s ease;
    }

    a:hover {
      background: #0056b3;
    }

  .auth-wrapper
    .card
      h2 #{message}
      a(href="/chat") Go to chat
